$text-align = left

$prog-pos = bottom

$content-height = 90%
$stat-height = 10%

.reveal .progress
	height:.5em;
	position:absolute;
	{$prog-pos} 0
	box-shadow: inset 0 1px 2px rgba(0,0,0,.1);
	& > span
		background-color: #009CDF!important;
		box-shadow: inset 0 -1px 0 rgba(0,0,0,.15);

.logo
	height:60%;

.stat-bar
	z-index: 9999;
	background-repeat:no-repeat;
	background-size:100%;
	width:100%;
	top:0;
	height:100px;
	position:absolute;
	font-weight:100;
	display:table;
	
	.stat-left
		text-align:left;
		padding-left:20px;
	.stat-right
		text-align:right;
		padding-right:20px;
		
	.stat-left,
	.stat-right
		display:table-cell;
		vertical-align: middle;
		box-sizing:border-box;
		width:50%;
		height:100%;


	.location
		text-transform:capitalize;
		margin:0;

.overlay
	&.show
		opacity:1;
	opacity:0;
	transition: opacity .3s ease-in-out;
	color:#fff;
	z-index:9999;
	background-color:rgba(0,0,0,.6);
	margin:auto;
	border-radius:4px;
	position:absolute;
	width:300px;
	height:100px;
	right:0;
	bottom:0;
	font-size:3em;
	text-align: center;
	display:table;
	.loader
		display:table-cell;
		vertical-align:middle;
		position:relative;
		height:@height - 20px;
		text-align:center;
		span.loader-text
			&:before
				display:inline-block;
				margin-top:4px;
				font-family:sans-serif;
				font-size:14px;
				content:"Loading Content...";

.slides
	.blank
		h1
			text-transform:capitalize;

.slide-background.feed.tint
	-webkit-box-shadow: inset 0px 0px 0px 9999em rgba(0,0,0,0.75);
	-moz-box-shadow: inset 0px 0px 0px 9999em rgba(0,0,0,0.75);
	box-shadow: inset 0px 0px 0px 9999em rgba(0,0,0,0.75);

.tint
	display: flex;
	flex-direction: column;
	justify-content: center;
	height:100%;
	h1
		text-align:center;
		display: flex;
		flex-direction: column;
		justify-content: center;
		height:100%;

.slides
	section
		font-size:1.75em;


